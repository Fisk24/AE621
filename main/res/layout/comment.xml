<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_primary"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name Is Too Long"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comUserRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comPostedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 months ago"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/comAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/linearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comBodyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment body text."
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/comActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="15dp"
        android:text="Respond | Report"
        android:textColor="@android:color/background_light" />
</RelativeLayout>